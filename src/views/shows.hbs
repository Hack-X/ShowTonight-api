<h1>Shows</h1>

<table class="table">
 <thead>
   <th>name</th>
   <th>venue</th>
   <th>description</th>
   <th>capacity</th>
   <th>price</th>
   <th>date</th>
 </thead>

  {{#list data}}

  <tr>
    <td>
      <a class="btn btn-primary" href="/shows/{{id}}" role="button">
        {{name}}
      </a>
    </td>
    <td>{{venue}}</td>
    <td>{{description}}</td>
    <td>{{capacity}}</td>
    <td>{{price}}</td>
    <td>{{date}}</td>
  </tr>

  {{/list}}
</table>

<div class="text-center">
  <a class="btn btn-primary" href="/shows/create" role="button">
    Ajouter un show
  </a>
</div>