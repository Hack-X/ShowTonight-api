<h1>Update show</h1>

<form action="/shows/update/{{data.id}}" method="post">
  <div class="form-group">
    <label for="name">Name*</label>
    <input value="{{data.name}}" class="form-control" type="text" id="name" name="name" placeholder="Nom du concert" required>
  </div>

  <div class="form-group">
    <label for="venue">Venue*</label>
    <input value="{{data.venue}}" class="form-control" type="text" id="venue" name="venue" placeholder="Nom de la salle" required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input value="{{data.description}}" class="form-control" type="text" id="description" name="description" placeholder="Description du concert">
  </div>

  <div class="form-group">
    <label for="capacity">Capacity</label>
    <input value="{{data.capacity}}" class="form-control" type="number" id="capacity" name="capacity" placeholder="Ex: 500">
  </div>

  <div class="form-group">
    <label for="price">Price*</label>
    <input value="{{data.price}}" class="form-control" type="number" id="price" name="price" placeholder="Ex: 30" required>
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input value="{{data.image}}" class="form-control" type="text" id="image" name="image" placeholder="Ex: http://lien.vers-l-image.com/img.jpeg">
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input value="{{data.date}}" class="form-control" type="date" id="date" name="date">
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Update
    </button>
  </div>
</form>