<h1>Update booking</h1>

<form action="/bookings/update/{{booking.id}}" method="post">
  <div class="form-group">
    <label for="username">Username*</label>
    <input value="{{booking.username}}" class="form-control" type="text" id="username" name="username" placeholder="Nom" required>
  </div>

  <div class="form-group">
    <label for="showId">Show*</label>
    <select class="form-control" id="showId" name="showId" required>
      {{#list shows}}
      <option value="{{id}}" {{selected ../booking.showId id}}>{{name}}</option>
      {{/list}}
    </select>
  </div>

  <div class="form-group">
    <label for="seats">Seats*</label>
    <input value="{{booking.seats}}" class="form-control" type="number" id="seats" name="seats" placeholder="Nombre de places" required>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Update
    </button>
  </div>
</form>